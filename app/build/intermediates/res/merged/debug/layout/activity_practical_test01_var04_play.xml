<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="practicaltest01var04.eim.systems.cs.pub.ro.practicaltest01var04.PracticalTest01Var04PlayActivity">

    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_marginTop="65dp"
        android:layout_below="@+id/check"
        android:layout_alignLeft="@+id/check"
        android:layout_alignStart="@+id/check" />

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score"
        android:layout_marginLeft="74dp"
        android:layout_marginStart="74dp"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/guess"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/gener"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate"
        android:layout_alignBottom="@+id/score"
        android:layout_toRightOf="@+id/score"
        android:layout_toEndOf="@+id/score"
        android:layout_marginLeft="93dp"
        android:layout_marginStart="93dp" />

    <Button
        android:id="@+id/check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/gener"
        android:layout_alignRight="@+id/gener"
        android:layout_alignEnd="@+id/gener" />

    <TextView
        android:id="@+id/guess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guess"
        android:layout_marginTop="42dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/score"
        android:layout_alignEnd="@+id/score" />
</RelativeLayout>
